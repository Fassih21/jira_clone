<div class="container my-5">
  <h2 class="mb-4 text-center">Create New Ticket</h2>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <% if flash[:alert] %>
            <div class="alert alert-danger"><%= flash[:alert] %></div>
          <% end %>

          <%= form_with(model: @ticket, local: true) do |f| %>
            <div class="mb-3">
              <%= f.label :title, class: "form-label" %>
              <%= f.text_field :title, class: "form-control", placeholder: "Enter ticket title" %>
            </div>

            <div class="mb-3">
              <%= f.label :description, class: "form-label" %>
              <%= f.text_area :description, class: "form-control", placeholder: "Enter ticket description", rows: 4 %>
            </div>

            <div class="mb-3">
              <%= f.label :dev_id, "Assign Developer", class: "form-label" %>
              <%= f.collection_select :dev_id, User.dev, :id, :name,
                                      { prompt: "Select Developer" }, { class: "form-select" } %>
            </div>

            <div class="mb-3">
              <%= f.label :qa_id, "Assign QA", class: "form-label" %>
              <%= f.collection_select :qa_id, User.qa, :id, :name,
                                      { prompt: "Select QA" }, { class: "form-select" } %>
            </div>

            <div class="mb-3">
              <%= f.label :status, class: "form-label" %>
              <%= f.select :status, Ticket::STATUSES.map { |s| [s.titleize, s] },
                           { prompt: "Select Status" }, class: "form-select" %>
            </div>

            <div class="text-center">
              <%= f.submit "Create Ticket", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
