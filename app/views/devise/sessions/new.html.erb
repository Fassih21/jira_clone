<div class="container vh-100 d-flex align-items-center justify-content-center">
  <div class="card shadow-lg p-4" style="width: 400px;">
    <h2 class="text-center mb-4 fw-bold">Welcome Back</h2>


    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: "form-label fw-semibold" %>
        <%= f.email_field :email, autofocus: true, class: "form-control form-control-lg" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label fw-semibold" %>
        <%= f.password_field :password, class: "form-control form-control-lg" %>
      </div>

      <div class="form-check mb-3">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>

      <%= f.submit "Log in", class: "btn btn-primary w-100 btn-lg" %>
    <% end %>

    <div class="text-center mt-3">
      <%= link_to "Create account", new_user_registration_path, class: "text-decoration-none" %>
    </div>
  </div>
</div>
